# Configuration de base
PORT=4013
NODE_ENV=development

# Configuration MongoDB
MONGO_URL_DEV=mongodb://localhost:27017/formulaire_db

# Configuration JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Configuration SMTP pour l'envoi d'emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# URL du frontend pour les liens de partage
FRONTEND_URL=http://localhost:3000

# Configuration pour les uploads
UPLOAD_MAX_SIZE=10000000
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuration des limites de requête
REQUEST_LIMIT=10000mb
REQUEST_TIMEOUT=30000

# Configuration des sessions
SESSION_SECRET=your-session-secret-key-here
SESSION_EXPIRES_IN=24h

# Configuration des liens de partage
SHARE_LINK_EXPIRES_DAYS=30
SHARE_MAX_USES_DEFAULT=1000

# Configuration des emails programmés
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000
EMAIL_BATCH_SIZE=50
